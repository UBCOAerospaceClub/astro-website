---
const { title = "UBCO Aerospace" } = Astro.props;
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
        
        <!-- Google tag (gtag.js) -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-YZ4EVRE8CS"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag("consent", "default", {
                ad_storage: "denied",
                ad_user_data: "denied",
                ad_personalization: "denied",
                analytics_storage: "denied",
            });

            gtag('config', 'G-YZ4EVRE8CS');
        </script>

    </head>
    <body class="bg-background text-brand-white font-body-sans"> 
        <header class="fixed top-0 w-full z-50 bg-background/80 backdrop-blur border-b border-surface flex justify-between items-center font-heading-sans">
            <a href="/" class="flex items-center space-x-4 p-2 pl-6">
                <img src="/logo-white.svg" alt="UBCO Aerospace Logo" class="h-12">
                <h1 class="text-2xl font-bold tracking-wide">UBCO Aerospace</h1>
            </a>
            <nav class="space-x-6 hidden md:flex p-6">
                <a href="/#about" class="hover:text-brand-red transition">About</a>
                <div class="relative group inline-block">
                    <a href="/#divisions" class="hover:text-brand-red transition focus:outline-none">Divisions</a>
                    <div class="absolute left-0 mt-2 w-48 bg-background border border-surface rounded shadow-lg opacity-0 group-hover:opacity-100 group-focus:opacity-100 transition-opacity duration-200 z-50">
                        <a href="/uav" class="block px-4 py-2 hover:bg-surface hover:text-brand-red transition">UAV Team</a>
                        <a href="/rocketry" class="block px-4 py-2 hover:bg-surface hover:text-brand-red transition">Rocketry Team</a>
                        <a href="/fixed-wing" class="block px-4 py-2 hover:bg-surface hover:text-brand-red transition">Fixed Wing Team</a>
                    </div>
                </div>
                <a href="/#sponsors" class="hover:text-brand-red transition">Sponsors</a>
                <a href="/#join" class="hover:text-brand-red transition">Join Us</a>
                <a href="/#contact" class="hover:text-brand-red transition">Contact</a>
            </nav>
        </header>

        <main class="pt-24 mx-auto px-6 max-w-7xl">
        <slot />
        </main>


        <footer class="mt-16 py-6 text-center border-t border-surface">
            <p class="text-sm text-gray-500">Â© {new Date().getFullYear()} UBCO Aerospace. All rights reserved.</p>
        </footer>
    </body>
</html>